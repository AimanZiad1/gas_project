<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"

    tools:context="com.example.pc.database.tasjeel_accont"
    android:orientation="vertical">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="5.42"
        android:gravity="center"
        android:layout_marginTop="70dp">

        <EditText
        android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginTop="0dp"
            android:inputType="textPersonName"
        android:hint="الاسم"
        android:ems="10"
            android:background="@drawable/ship"
        android:id="@+id/edtname"
        android:layout_weight="1"
            android:gravity="center"
            android:textAllCaps="true"
            android:textStyle="normal|bold"
            android:fontFamily="sans-serif"
            android:selectAllOnFocus="true"
            android:layoutDirection="rtl"
            android:layout_margin="10dp"
            android:textAlignment="textStart" />

        <EditText
            android:layout_marginTop="0dp"
    android:background="@drawable/ship"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:hint="رقم البطاقه الشخصيه"
            android:ems="10"
            android:id="@+id/edtemile"
            android:layout_weight="1"
            android:inputType="number"
            android:gravity="center"
            android:layout_margin="10dp"
            android:textAlignment="textStart" />

        <EditText

            android:layout_marginTop="0dp"
            android:layout_width="match_parent"
            android:hint="رقم التلفون"
            android:background="@drawable/ship"
            android:ems="10"
            android:id="@+id/ednumberphone"
            android:layout_weight="1"
            android:inputType="number"
            android:gravity="center"
            android:layout_height="70dp"
            android:layout_margin="10dp"
            android:textAlignment="textStart" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <Button
                android:layout_marginTop="0dp"
                android:text="عرض"
                android:layout_width="match_parent"
                android:id="@+id/btshow"
                android:layout_weight="1"
                android:textColor="@android:color/background_light"
                android:background="@drawable/ship_button"
                android:layout_margin="10dp"
                android:gravity="center"
                android:layout_height="70dp"
                android:textSize="17sp"
                android:textStyle="normal|bold"
                android:textAllCaps="false"
                android:textAlignment="center"
                android:drawableTop="@android:drawable/ic_menu_my_calendar"
                android:paddingTop="14dp" />

            <Button
                android:layout_marginTop="0dp"
                android:layout_width="match_parent"
                android:id="@+id/btadd"
                android:layout_weight="1"
                android:background="@drawable/ship_button"
                android:textColor="@android:color/background_light"
                android:layout_margin="10dp"
                android:onClick="add"
                android:gravity="center"
                android:layout_height="70dp"
                android:textSize="17sp"
                android:textStyle="normal|bold"
                android:textAllCaps="false"
                android:textAlignment="center"
                android:drawableTop="@android:drawable/ic_menu_add"
                android:paddingTop="15dp"
                android:text="اضافه" />
        </LinearLayout>

    </LinearLayout>


</LinearLayout>
