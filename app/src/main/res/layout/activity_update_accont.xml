<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_update"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"

    tools:context="com.example.pc.database.update_accont"
    android:orientation="vertical">



    <EditText
        android:layout_width="match_parent"

        android:inputType="textPersonName"
        android:layout_marginTop="10dp"
        android:hint="الاسم"
        android:ems="10"
        android:layout_height="50dp"
        android:background="@drawable/ship"
        android:id="@+id/edtname_upd"
        android:layout_weight="1"
        android:gravity="center"
        android:textAllCaps="true"
        android:textStyle="normal|bold" />


    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/ship"
        android:inputType="number"
        android:hint="رقم البطاقه الشخصيه"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:id="@+id/edt_card_upd"
        android:layout_weight="1"
        android:gravity="center"
        android:textAllCaps="true"
        android:textStyle="normal|bold" />


    <EditText


android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/ship"
        android:hint="رقم التلفون"
        android:id="@+id/edt_num_phon_upd"
        android:ems="10"

        android:layout_weight="1"
        android:inputType="number"
        android:gravity="center" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"

        >


    <Button

        android:text="حذف"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btdelet"
        android:layout_weight="1"
        android:textColor="@android:color/background_light"
        android:background="@drawable/ship_button"
        android:layout_margin="10dp"
        android:gravity="center"
        android:drawableRight="@android:drawable/ic_menu_delete"
        android:paddingRight="15dp"
        android:textSize="22sp"
        android:textStyle="normal|bold" />

        <Button

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btupdate"
            android:layout_weight="1"
            android:background="@drawable/ship_button"
            android:textColor="@android:color/background_light"
            android:layout_margin="10dp"
            android:text="تعديل"
            android:gravity="center"
            android:drawableRight="@android:drawable/ic_menu_edit"
            android:paddingRight="15dp"
            android:textSize="22sp"
            android:textStyle="normal|bold" />

    </LinearLayout>
</LinearLayout>
